<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/SCREEN"
    tools:context="com.example.jpyou.ui.view.fragment.CommentDoctorFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack_CommentDoctorFragment"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_back"
                style="@style/BUTTON"
                app:backgroundTint="@null" />

            <TextView
                android:id="@+id/textView5"
                style="@style/TEXT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Đánh giá bác sĩ"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bác sĩ bạn từng khám"
            android:textSize="20sp"
            android:layout_margin="10dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerDoctor_CommentDoctorFragment"
            android:layout_width="match_parent"
            android:layout_height="59dp" />

        <TextView
            android:id="@+id/textViewNameDoctor_CommentDoctorFragment"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="NAME"
            android:textAlignment="center"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextText_CommentDoctorFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            style="@style/EDITTEXT"
            android:layout_margin="10dp"
            android:inputType="text"/>

        <Button
            android:id="@+id/buttonConfirm_CommentDoctorFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@null"
            android:layout_gravity="center"
            style="@style/BUTTON"
            android:text="Gửi đánh giá" />
    </LinearLayout>
</FrameLayout>