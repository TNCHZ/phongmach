<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_home"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpyou.ui.view.fragment.HomeFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutTop_HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            style="@style/TEXT"
            android:background="@drawable/custom_lineaerlayout_header"
            android:orientation="horizontal"
            android:padding="20dp">

            <TextView
                android:id="@+id/textViewHeader_HomeFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Trang chủ"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="34sp"
                android:textStyle="bold" />

        </LinearLayout>

        <SearchView
            android:id="@+id/searchView_HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="33dp" />

        <HorizontalScrollView
            android:id="@+id/scrollview_HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_empty"
            android:padding="10dp"
            android:layout_margin="5dp">

            <LinearLayout
                android:id="@+id/linearLayoutScrollView_HomeFragment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/backgorund" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img1" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img2" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img3" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/img4" />

            </LinearLayout>
        </HorizontalScrollView>

        <TableLayout
            android:id="@+id/table_HomeFragment"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="20dp"
            android:stretchColumns="*">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <Button
                    android:id="@+id/btnTreatment_HomeFragment"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/ic_register_for_examination_black"
                    android:background="@drawable/custom_button"
                    android:text="Đặt lịch khám"
                    style="@style/TEXT"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />

                <Button
                    android:id="@+id/btnChooseDoctor_HomeFragment"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:drawableTop="@drawable/ic_person_add_black"
                    android:background="@drawable/custom_button"
                    android:text="Chọn bác sĩ khám"
                    style="@style/TEXT"
                    android:textStyle="bold"
                    app:backgroundTint="@null" />
            </TableRow>

        </TableLayout>

        <Button
            android:id="@+id/btnAddWorkDayForDoctor_HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:drawableRight="@drawable/ic_sort_black"
            android:drawableTop="@drawable/ic_list_black"
            android:background="@drawable/custom_calendar"
            android:text="Xếp lịch khám"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_gravity="center"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/textViewChange_HomeFragment"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danh sách bác sĩ:"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ListView
            android:id="@+id/listDSBS_HomeFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</FrameLayout>