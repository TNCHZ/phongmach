<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SCREEN"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpyou.ui.view.fragment.AddDoctorWorkDayNurseFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linearLayoutHeader_AddDoctorWorkDayNurseFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/SCREEN"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonBack_AddDoctorWorkDayNurseFragment"
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:background="@drawable/ic_back"
                android:text="" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/TEXT"
                android:text="Danh sách ngày làm"
                android:textAlignment="center"
                android:textSize="20dp" />


        </LinearLayout>

        <CalendarView
            android:id="@+id/calendarView2_AddDoctorWorkDayNurseFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textview3"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bác sĩ"
            android:textAlignment="center"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerDoctors_AddDoctorWorkDayNurseFragment"
            android:layout_width="match_parent"
            style="@style/BUTTON"
            android:layout_margin="10dp"
            android:layout_height="55dp" />

        <TextView
            android:id="@+id/textviewConfirm_AddDoctorWorkDayNurseFragment"
            style="@style/TEXT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="center"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btnConfirm_AddDoctorWorkDayNurseFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/BUTTON"
            android:layout_marginTop="20dp"
            app:backgroundTint="@null"
            android:text="Xác nhận" />
    </LinearLayout>


</FrameLayout>