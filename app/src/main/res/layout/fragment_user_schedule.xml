<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_user_schedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpyou.ui.view.fragment.ScheduleUserFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayoutChecked_ScheduleUserFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <SearchView
                android:id="@+id/searchView_ScheduleUserFragment"
                android:layout_width="359dp"
                android:layout_height="wrap_content"
                android:queryHint="Nhập ngày">

            </SearchView>

            <Button
                android:id="@+id/buttonRefresh_ScheduleUserFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_restartf_black"
                app:backgroundTint="@null" />
        </LinearLayout>

        <CalendarView
            android:id="@+id/calendar_ScheduleUserFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weekDayTextAppearance="@style/CalenderViewWeekCustomText"
            android:theme="@style/CalenderViewCustom"/>


        <ListView
            android:id="@+id/listSchedule_ScheduleUserFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutNotChecked_ScheduleUserFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:drawable/editbox_dropdown_dark_frame"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnChecked_ScheduleUserFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="200dp"
            android:background="@drawable/custom_button"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="@null" />
    </LinearLayout>

</FrameLayout>