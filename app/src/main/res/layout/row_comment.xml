<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/SCREEN"
    android:padding="8dp">

    <ImageView
        android:id="@+id/imgAvatar_RowComment"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="10dp"
        android:layout_centerVertical="true"
        android:background="@drawable/custom_empty_rim"
        app:srcCompat="@drawable/ic_person_custom" />

    <TextView
        android:id="@+id/textViewName_RowComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgAvatar_RowComment"
        android:text="Name"
        style="@style/TEXT"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewDescribe_RowComment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:layout_below="@id/imgAvatar_RowComment"
        android:text="Describe"
        style="@style/TEXT"
        android:textSize="18sp" />

</RelativeLayout>
