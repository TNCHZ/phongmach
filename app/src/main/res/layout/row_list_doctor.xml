<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Hình ảnh Avatar -->
    <ImageView
        android:id="@+id/imageViewAvatar_rowListDoctor"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person"
        android:contentDescription="Avatar" />

    <!-- Tên bác sĩ -->
    <TextView
        android:id="@+id/textViewName_rowListDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TEXT"
        android:layout_toEndOf="@id/imageViewAvatar_rowListDoctor"
        android:layout_marginStart="16dp"
        android:text="Name" />

    <!-- Mô tả bác sĩ -->
    <TextView
        android:id="@+id/textViewDistriction_rowListDoctor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TEXT"
        android:layout_toEndOf="@id/imageViewAvatar_rowListDoctor"
        android:layout_below="@id/textViewName_rowListDoctor"
        android:layout_marginStart="16dp"
        android:text="Description" />

    <Button
        android:id="@+id/btnRegis_rowListDoctor"
        style="@style/BUTTON"
        android:layout_width="163dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="76dp"
        android:layout_toRightOf="@+id/textViewDistriction_rowListDoctor"
        android:text="Xem chi tiết" />

</RelativeLayout>
