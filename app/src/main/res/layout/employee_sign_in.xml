<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpyou.User.UserSignIn">

    <ImageView
        android:id="@+id/imgBackground_EmployeeSignIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitStart"
        android:layout_alignParentTop="true"
        app:srcCompat="@drawable/backgorund" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:background="@drawable/custome_edit_text"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewHeader_EmployeeSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:text="Thông tin đăng nhập"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerRole_EmployeeSignIn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:padding="5dp"
            android:background="@drawable/custom_button_rim" />

        <EditText
            android:id="@+id/txtUserName_EmployeeSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custome_edit_text"
            android:ems="10"
            android:hint="Nhập số điện thoại"
            android:inputType="phone"
            android:maxLength="10"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <TextView
            android:id="@+id/textViewWarning_EmployeeSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_margin="10dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/txtPasswork_EmployeeSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custome_edit_text"
            android:ems="10"
            android:hint="Nhập mật khẩu"
            android:inputType="textPassword"
            android:textColor="@color/black"
            app:backgroundTint="@null" />

        <CheckBox
            android:id="@+id/ckbShow_EmployeeSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Hiển thị mật khẩu"
            android:textColor="@color/black"
            android:textSize="14dp" />

        <Button
            android:id="@+id/btnSignIn_EmployeeSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button"
            android:text="Đăng nhập"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            app:backgroundTint="@null" />

    </LinearLayout>

</RelativeLayout>