<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jpyou.User.UserSignIn">

    <ImageView
        android:id="@+id/imgBackground_UserSignIn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/backgorund" />

    <TextView
        android:id="@+id/textViewHeader_UserSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="200dp"
        android:text="Thông tin đăng nhập"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/txtUserName_UserSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewHeader_UserSignIn"
        android:layout_marginBottom="20dp"
        android:background="@drawable/custome_edit_text"
        android:ems="10"
        android:hint="Nhập số điện thoại"
        android:inputType="phone"
        app:backgroundTint="@null" />

    <EditText
        android:id="@+id/txtPasswork_UserSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtUserName_UserSignIn"
        android:layout_marginTop="20dp"
        android:background="@drawable/custome_edit_text"
        android:ems="10"
        android:hint="Nhập mật khẩu"
        android:inputType="textPassword"
        app:backgroundTint="@null" />

    <CheckBox
        android:id="@+id/ckbShow_UserSignIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtPasswork_UserSignIn"
        android:layout_marginBottom="50dp"
        android:text="Hiển thị mật khẩu"
        android:textColor="@color/black"
        android:textSize="14dp" />

    <Button
        android:id="@+id/btnSignIn_UserSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ckbShow_UserSignIn"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_button"
        android:text="Đăng nhập"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold"
        app:backgroundTint="@null" />

    <Button
        android:id="@+id/btnSignUp_UserSignIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnSignIn_UserSignIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@android:drawable/divider_horizontal_dim_dark"
        android:text="Đăng ký tài khoản mới"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:backgroundTint="@null" />

</RelativeLayout>